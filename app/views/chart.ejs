<script>

window.onload = function() {

console.log(window.location.href);

var dataPoints = [];

var chart = new CanvasJS.Chart("chartContainer", {
animationEnabled: true,
theme: "light2",
title: {
text: "Closed Opportunity Data"
},
axisY: {
title: "Amount ($)",
titleFontSize: 24
},
axisX: {
title: "Closed Date",
titleFontSize: 24
},
data: [{
type: "column",
yValueFormatString: "#,### $",
dataPoints: dataPoints
}]
});

function addData(data) {
console.log('***********************');
console.log(data);

for (var i = 0; i < data.connectResults.length; i++) {
dataPoints.push({
    x: new Date(data.connectResults[i].closedate),
    y: data.connectResults[i].amount
});
}
chart.render();

}

var strurl = window.location.href;
var res = strurl.split('/').slice(2);
res[1] = 'custom';
var str2 = "https://mobile-charging.herokuapp.com/"+res[1]+"/"+res[2]+"/"+res[3];

$.getJSON(str2, addData);
